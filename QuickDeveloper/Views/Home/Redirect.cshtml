<div style="display: flex; justify-content: center; align-items: center; height: 80vh; text-align: center;">
    <div style="display: inline-block; background-color: #ccc; padding: 20px; border-radius: 5px;">
        <p>Conta verificada com sucesso!</p>
        <p id="timer"></p>
    </div>
</div>

<script>
    let seconds = 5;
    
    function updateTime() {        
        document.getElementById('timer').innerHTML = 'Você será redirecionado em ' + seconds  + ' segundos';
        seconds--;

        if (seconds == 0) {
            window.location.href = '/Home/Index';
        }
    }

    setInterval(updateTime, 1500);
</script>