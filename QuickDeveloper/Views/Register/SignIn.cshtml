@model Model_User
@{
    Layout = null;
}

<link rel="stylesheet" href="/css/register.css" asp-append-version="true" />
<title>SignIn | SignUp</title>

<html lang="pt-br">
<body>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">

                <!-- Formulário Login -->
                <form asp-controller="Register" asp-action="Login" class="sign-in-form" method="post">
                    <h2 class="title">Entrar no <span style="color: #ED2218">Quick</span><span style="color: #303457">Developer</span></h2>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="text" asp-for="Email" placeholder="Digite o email cadastrado" required/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" asp-for="Password" placeholder="Senha" required/>
                    </div>
                    <input type="submit" value="Entrar" class="btn solid"/>                    
                </form>

                <!-- Formulário Cadastro -->
                
                 <form asp-controller="Register" asp-action="SignUp" id="signup-form" class="sign-up-form" method="post"> 
                    <h2 class="title">Cadastre-se</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" asp-for="Username" placeholder="Nome" required/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" asp-for="Email" placeholder="Email" required/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-calendar"></i>
                        <input type="date" asp-for="Birthdate" placeholder="Data de Nascimento" required/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" asp-for="Password" placeholder="Senha" required/>
                    </div>
                    <br>
                    <div>
                       <input type="checkbox" class="form-check-input" id="dev" name="dev" value="dev"/>
                        <label for="">Fazer cadastro como Desenvolvedor</label>
                    </div>
                    <br>
                    <input type="submit" value="Enviar" class="btn" />                    
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Novo no <span style="color: #ED2218">Quick</span>Developer?</h3>
                    <p>
                        Realize o seu cadastro e tenha acesso à melhor plataforma de freelancers do Brasil!
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Cadastre-se
                    </button>
                </div>
                <img src="/img/register/signin.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Já tem cadastro?</h3>
                    <p>
                        Ficamos felizes que você voltou! Faça o login e aproveite novamente nossa plataforma! 
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Entrar
                    </button>
                </div>
                <img src="/img/register/signup.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="/js/register.js"></script>
</body>
</html>